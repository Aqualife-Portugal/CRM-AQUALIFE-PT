    <script>
        // Configura√ß√£o do Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyA1Xx4K5mj_bKVCQyQPOJcKVhXTk9yA2dQ",
            authDomain: "crm-aqualife.firebaseapp.com",
